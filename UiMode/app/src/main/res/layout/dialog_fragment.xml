<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".activity.CombineActivity">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            >

            <EditText
                android:id="@+id/authPhoneEditText"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:hint="请输入手机号"
                android:singleLine="true"
                android:maxEms="11"
                android:background="@drawable/auth_add_member_input_shape"
                android:layout_marginLeft="@dimen/auth_padding_20"
                android:layout_marginRight="@dimen/auth_padding_10"
                android:paddingLeft="@dimen/auth_padding_10"
                />


            <EditText
                android:id="@+id/authNameEditText"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:hint="请输入姓名"
                android:singleLine="true"
                android:maxEms="11"
                android:background="@drawable/auth_add_member_input_shape"
                android:layout_marginRight="@dimen/auth_padding_10"
                android:paddingLeft="@dimen/auth_padding_10"
                />


            <EditText
                android:id="@+id/authNoteEditText"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:hint="请输入备注"
                android:singleLine="true"
                android:maxEms="11"
                android:background="@drawable/auth_add_member_input_shape"
                android:layout_marginRight="@dimen/auth_padding_20"
                android:paddingLeft="@dimen/auth_padding_10"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center"
            android:padding="@dimen/auth_padding_10"
            >

            <Button
                android:id="@+id/authAddMemberCancerBtn"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:text="@string/auth_cancer_string"
                android:textSize="@dimen/auth_padding_20"
                android:background="@drawable/auth_cancer_confirm__btn_selector"
                android:layout_marginRight="@dimen/auth_padding_10"
                />

            <Button
                android:id="@+id/authAddMemberConfirmBtn"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:text="@string/auth_confirm_string"
                android:textSize="@dimen/auth_padding_20"
                android:layout_marginRight="@dimen/auth_padding_10"
                android:background="@drawable/auth_cancer_confirm__btn_selector"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            >

            <TextView
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:text="@string/auth_add_another_way_String"
                android:textSize="@dimen/auth_padding_10"
                android:textColor="@color/auth_dark_color"
                android:paddingLeft="@dimen/auth_padding_10"
                android:gravity="bottom"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:padding="@dimen/auth_padding_20"
            android:gravity="center"
            >

            <TextView
                android:id="@+id/authPhoneListBtn"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:drawableLeft="@mipmap/auth_phone_list"
                android:text="手机通讯录"
                android:gravity="center"
                android:layout_marginRight="@dimen/auth_padding_20"
                />


            <TextView
                android:id="@+id/authCameraInputBtn"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:drawableLeft="@mipmap/auth_camera"
                android:text="@string/auth_camera_input_string"
                android:gravity="center"
                android:layout_marginLeft="@dimen/auth_padding_20"
                />



        </LinearLayout>


</LinearLayout>