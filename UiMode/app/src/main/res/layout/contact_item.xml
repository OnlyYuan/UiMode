<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <TextView
        android:id="@+id/tips_table"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="A"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:gravity="center_vertical"
        android:layout_marginLeft="25dp"
        android:visibility="gone"
        />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"

        >

        <ImageView
            android:id="@+id/select_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/selector_false"
            android:layout_centerVertical="true"
            />

         <ImageView
             android:id="@+id/headImg"
             android:layout_width="40dp"
             android:layout_height="40dp"
             android:src="@mipmap/ic_launcher"
             android:layout_toEndOf="@+id/select_state"
             android:layout_marginLeft="10dp"
             android:layout_centerVertical="true"/>


         <LinearLayout
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:orientation="vertical"
             android:layout_toRightOf="@+id/headImg"
             android:layout_marginLeft="10dp"
             android:layout_centerVertical="true"
             >

                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="姓名"
                    />

               <TextView
                  android:id="@+id/phone"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="15823635521"
                   android:layout_marginTop="5dp"
                  />

             <TextView
                 android:id="@+id/num"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="0"
                 android:layout_marginTop="5dp"
                 />
         </LinearLayout>

           <TextView
               android:id="@+id/add_btn"
               android:layout_width="50dp"
               android:layout_height="30dp"
               android:text="添加"
               android:layout_alignParentEnd="true"
               android:gravity="center"
               android:layout_marginEnd="10dp"
               android:layout_centerVertical="true"
               android:clickable="true"
               />

         <TextView
             android:id="@+id/add_status"
             android:layout_width="50dp"
             android:layout_height="30dp"
             android:text="已添加"
             android:layout_alignParentEnd="true"
             android:gravity="center"
             android:layout_marginEnd="10dp"
             android:visibility="gone"
             />

    </RelativeLayout>
</LinearLayout>
